@page
@model ceng382_project3.Pages.CreateAppointmentModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<section class="page-content">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form id="profile-form" method="post" enctype="multipart/form-data">
                    @foreach (var item in Model.Servants)
                    {
                        <table>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        <img style="border-radius: 50%; width: 50%; height: 50%;" src="data:image;base64,@System.Convert.ToBase64String(item.Picture)" id="profile-pic" alt="Profile picture" />
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <input value="@Html.DisplayFor(model => item.FirstName)" class="form-control" disabled />
                                    </div>
                                </th>
                                <th>
                                    <div class="form-group">
                                        <label asp-for="DueDate"></label>
                                        <input asp-for="DueDate" class="form-control" type="datetime-local" />
                                        <span asp-validation-for="DueDate" class="text-danger"></span>
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <input value="@Html.DisplayFor(model => item.LasName)" class="form-control" disabled />
                                    </div>
                                </th>
                                <th>
                                    <div class="field">
                                        <label asp-for="Address"></label>
                                        <input asp-for="Address" class="form-control" />
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        <label>Job</label>
                                        <input value="@Html.DisplayFor(model => item.Job)" class="form-control" disabled />
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    <div class="form-group">
                                        <label>City</label>
                                        <input value="@Html.DisplayFor(model => item.City)" class="form-control" disabled />
                                    </div>
                                </th>
                            </tr>
                            <tr>
                                <th></th>
                                <th><button id="update-profile-button" type="submit" class="btn btn-primary">Save</button></th>
                            </tr>
                        </table>
                    }
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
